{
    "AWSTemplateFormatVersion": "2010-09-09", 
    "Description": "SUZ-LAB Formation 0020", 
    "Mappings": {
        "AvailabilityZoneMap": {
            "ap-northeast-1": {
                "AzA": "ap-northeast-1a", 
                "AzB": "ap-northeast-1b", 
                "AzC": "ap-northeast-1c"
            }
        }
    }, 
    "Parameters": {
        "VpcCidrIpFirst2Octets": {
            "Default"    : "10.0", 
            "Description": "VPC CIDR IP First 2 Octets", 
            "Type"       : "String"
        },
        "KeyName": {
            "Default"    : "suz-lab_ap-northeast-1", 
            "Description": "Key Name", 
            "Type"       : "String"
        }, 
        "ImageId": {
            "Default"    : "ami-b1088eb0",
            "Description": "Image ID", 
            "Type"       : "String"
        },
        "SourceCidrIp": {
            "Default"    : "0.0.0.0/0",
            "Description": "Source CIDR IP",
            "Type"       : "String"
        },
        "OdStepType": {
            "Default"    : "simple/0.0.5",
            "Description": "Ondemand Step Type",
            "Type"       : "String"
        }
    },
    "Resources": {
        "Pattern0000": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/pattern/suz-lab_0000/0.0.1.json"
                ] ] },
                "Parameters": {
                    "VpcCidrIpFirst2Octets": { "Ref": "VpcCidrIpFirst2Octets" }
                }
            }
        },
        "Pattern0001": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/pattern/suz-lab_0001/0.0.1.json"
                ] ] },
                "Parameters": {
                    "VpcId"                : { "Fn::GetAtt": [ "Pattern0000", "Outputs.VpcId" ] }
                }
            }
        },
        "OdStep": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/component/suz-lab_od-step/",
                    { "Ref" : "OdStepType" },
                    ".json"
                ] ] },
                "Parameters": {
                    "Name"                        : "od-step",
                    "InstanceType"                : "t1.micro",
                    "KeyName"                     : { "Ref": "KeyName" },
                    "ImageId"                     : { "Ref": "ImageId" }, 
                    "SourceCidrIp"                : { "Ref": "SourceCidrIp" },
                    "VpcId"                       : { "Fn::GetAtt": [ "Pattern0000", "Outputs.VpcId" ] },
                    "SubnetId"                    : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdPublicVarA" ] },
                    "IamInstanceProfile"          : { "Fn::GetAtt": [ "Pattern0001", "Outputs.IamInstanceProfileApi" ] },
                    "SecurityGroupIdOpEc2"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpEc2" ] },
                    "SecurityGroupIdOpNat"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpNat" ] },
                    "SecurityGroupIdOdMaintenance": { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOdMaintenance" ] }
                }
            }
        },
        "HaNat": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/component/suz-lab_ha-nat/simple/0.0.2.json"
                ] ] },
                "Parameters": {
                    "Name"                        : "ha-nat",
                    "InstanceType"                : "t1.micro",
                    "KeyName"                     : { "Ref": "KeyName" },
                    "ImageId"                     : { "Ref": "ImageId" },
                    "PrivateIpAddressA"           : { "Fn::Join": [ "", [ { "Ref": "VpcCidrIpFirst2Octets" }, ".8.4"  ] ] },
                    "PrivateIpAddressB"           : { "Fn::Join": [ "", [ { "Ref": "VpcCidrIpFirst2Octets" }, ".9.4"  ] ] },
                    "VpcId"                       : { "Fn::GetAtt": [ "Pattern0000", "Outputs.VpcId" ] },
                    "RouteTableId"                : { "Fn::GetAtt": [ "Pattern0000", "Outputs.RouteTableIdProtected" ] },
                    "SubnetIdA"                   : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdPublicFixA" ] },
                    "SubnetIdB"                   : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdPublicFixB" ] },
                    "IamInstanceProfile"          : { "Fn::GetAtt": [ "Pattern0001", "Outputs.IamInstanceProfileApi" ] },
                    "SecurityGroupIdOpEc2"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpEc2" ] },
                    "SecurityGroupIdOpNat"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpNat" ] },
                    "SecurityGroupIdOdMaintenance": { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOdMaintenance" ] }
                }
            }
        },
        "OdNat": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/component/suz-lab_od-nat/simple/0.0.7.json"
                ] ] },
                "Parameters": {
                    "Name"                        : "od-nat",
                    "InstanceType"                : "t1.micro",
                    "KeyName"                     : { "Ref": "KeyName" },
                    "ImageId"                     : { "Ref": "ImageId" },
                    "IamInstanceProfile"          : { "Fn::GetAtt": [ "Pattern0001", "Outputs.IamInstanceProfileApi" ] },
                    "SecurityGroupIdOpNat"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpNat" ] },
                    "SecurityGroupIdOdMaintenance": { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOdMaintenance" ] },
                    "SubnetId"                    : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdPublicVarA" ] },
                    "RouteTableId"                : { "Fn::GetAtt": [ "Pattern0000", "Outputs.RouteTableIdPrivate" ] }
                }   
            }   
        }  
    },
    "Outputs": {
        "VpcId": {
            "Description": "VpcId",
            "Value"      : { "Fn::GetAtt": [ "Pattern0000", "Outputs.VpcId" ] }
        },
        "SubnetIdProtectedFixA": {
            "Description": "Subnet ID Protected Fix Zone A",
            "Value"      : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdProtectedFixA" ] }
        },
        "IamInstanceProfileApi": {
            "Description": "IAM Instance Profile",
            "Value"      : { "Fn::GetAtt": [ "Pattern0001", "Outputs.IamInstanceProfileApi" ] }
        },
        "SecurityGroupIdOpEc2": {
            "Description": "Security Group ID EC2",
            "Value"      : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpEc2" ] }
        },
        "SecurityGroupIdOpNat": {
            "Description": "Security Group ID NAT",
            "Value"      : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpNat" ] }
        },
        "SecurityGroupIdOdMaintenance": {
            "Description": "Security Group ID Maintenance",
            "Value"      : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOdMaintenance" ] }
        },
        "SecurityGroupIdOpStep": {
            "Description": "Security Group ID Step",
            "Value"      : { "Fn::GetAtt": [ "OdStep", "Outputs.SecurityGroupIdOpStep" ] }
        }
    } 
}

