{
    "AWSTemplateFormatVersion": "2010-09-09", 
    "Description": "SUZ-LAB Formation 0010", 
    "Mappings": {
        "AvailabilityZoneMap": {
            "ap-northeast-1": {
                "AzA": "ap-northeast-1a", 
                "AzB": "ap-northeast-1b", 
                "AzC": "ap-northeast-1c"
            }
        }
    }, 
    "Parameters": {
        "VpcCidrIpFirst2Octets": {
            "Default"    : "10.0", 
            "Description": "VPC CIDR IP First 2 Octets", 
            "Type"       : "String"
        },
        "KeyName": {
            "Default"    : "suz-lab_ap-northeast-1", 
            "Description": "Key Name", 
            "Type"       : "String"
        }, 
        "ImageId": {
            "Default"    : "ami-b1088eb0",
            "Description": "Image ID", 
            "Type"       : "String"
        }
    },
    "Resources": {
	"Pattern0000": {
  	    "Type": "AWS::CloudFormation::Stack",
	    "Properties": {
	        "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/pattern/suz-lab_0000/0.0.1.json"
                ] ] },
	        "Parameters": {
		    "VpcCidrIpFirst2Octets": { "Ref": "VpcCidrIpFirst2Octets" } 
	        }
   	    }
        },
	"Pattern0001": {
  	    "Type": "AWS::CloudFormation::Stack",
	    "Properties": {
	        "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/pattern/suz-lab_0001/0.0.1.json"
                ] ] },
	        "Parameters": {
		    "VpcId"                : { "Fn::GetAtt": [ "Pattern0000", "Outputs.VpcId" ] }
	        }
   	    }
        },
        "OdNatProtected": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/component/suz-lab_od-nat/simple/0.0.7.json"
                ] ] },
                "Parameters": {
                    "Name"                        : "od-nat-protected",
                    "InstanceType"                : "t1.micro",
                    "KeyName"                     : { "Ref": "KeyName" },
                    "ImageId"                     : { "Ref": "ImageId" },
                    "SubnetId"                    : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdPublicVarA" ] },
                    "RouteTableId"                : { "Fn::GetAtt": [ "Pattern0000", "Outputs.RouteTableIdProtected" ] },
                    "IamInstanceProfile"          : { "Fn::GetAtt": [ "Pattern0001", "Outputs.IamInstanceProfileApi" ] },
                    "SecurityGroupIdOpNat"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpNat" ] },
                    "SecurityGroupIdOdMaintenance": { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOdMaintenance" ] }
                }
            }
        },
        "OdNatPrivate": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": { "Fn::Join": [ "", [
                    "http://",
                    { "Ref" : "AWS::Region" },
                    ".cloudformation.suz-lab.com.s3-",
                    { "Ref" : "AWS::Region" },
                    ".amazonaws.com/cloudformation/component/suz-lab_od-nat/simple/0.0.7.json"
                ] ] },
                "Parameters": {
                    "Name"                        : "od-nat-private",
                    "InstanceType"                : "t1.micro",
                    "KeyName"                     : { "Ref": "KeyName" },
                    "ImageId"                     : { "Ref": "ImageId" },
                    "SubnetId"                    : { "Fn::GetAtt": [ "Pattern0000", "Outputs.SubnetIdPublicVarA" ] },
                    "RouteTableId"                : { "Fn::GetAtt": [ "Pattern0000", "Outputs.RouteTableIdPrivate" ] },
                    "IamInstanceProfile"          : { "Fn::GetAtt": [ "Pattern0001", "Outputs.IamInstanceProfileApi" ] },
                    "SecurityGroupIdOpNat"        : { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOpNat" ] },
                    "SecurityGroupIdOdMaintenance": { "Fn::GetAtt": [ "Pattern0001", "Outputs.SecurityGroupIdOdMaintenance" ] }
                }   
            }   
        }  
    },
    "Outputs": {
        "GithubMarkdown": {
            "Description": "Github Markdown",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/pattern/suz-lab_0001.md"
        }, 
        "GithubJson": {
            "Description": "Github JSON",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/pattern/suz-lab_0001.json"
        }, 
        "S3Json": {
            "Description": "S3 JSON",
            "Value"      : { "Fn::Join": [ "", [
                "http://",     
                { "Ref" : "AWS::Region" },
                ".cloudformation.suz-lab.com.s3-",
                { "Ref" : "AWS::Region" },
                ".amazonaws.com/cloudformation/pattern/suz-lab_0001/0.0.1.json"
            ] ] }
        }, 
	"CacooImage": {
            "Description": "Cacoo Image",
            "Value"      : "https://cacoo.com/diagrams/XXXXXXXXXXXXXXXX-XXXXX.png"
        },
	"VpcId": {
            "Description": "VpcId",
            "Value"      : { "Fn::GetAtt": [ "Pattern0000", "Outputs.VpcId" ] }
        }
    } 
}

