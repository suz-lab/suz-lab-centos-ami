{
    "AWSTemplateFormatVersion": "2010-09-09", 
    "Description": "SUZ-LAB Formation Operational Firewall", 
    "Mappings": {
        "AvailabilityZoneMap": {
            "ap-northeast-1": {
                "AzA": "ap-northeast-1a", 
                "AzB": "ap-northeast-1b", 
                "AzC": "ap-northeast-1c"
            }
        }
    }, 
    "Parameters": {
	"VpcId": {
            "Default": "vpc-xxxxxxxx",
            "Description": "VPC ID", 
            "Type": "String"
        },
	"SourceCidrIp": {
            "Default": "192.0.2.0/24",
            "Description": "Source CIDR IP", 
            "Type": "String"
        } 
