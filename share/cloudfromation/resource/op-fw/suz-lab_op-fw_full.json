    "Resources": {
	"EC2SecurityGroupStep": {
            "Properties": {
                "GroupDescription": "op-step", 
                "VpcId": { "Ref": "VpcId" }
            }, 
            "Type": "AWS::EC2::SecurityGroup"
        },
	"EC2SecurityGroupEc2": {
            "Properties": {
                "GroupDescription": "op-ec2", 
                "VpcId": { "Ref": "VpcId" }
            }, 
            "Type": "AWS::EC2::SecurityGroup"
        },
	"EC2SecurityGroupAdminLb": {
