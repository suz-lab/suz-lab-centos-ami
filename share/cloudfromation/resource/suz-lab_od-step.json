{
    "AWSTemplateFormatVersion": "2010-09-09", 
    "Description": "SUZ-LAB Formation OnDemand Step", 
    "Mappings": {
        "AvailabilityZoneMap": {
            "ap-northeast-1": {
                "AzA": "ap-northeast-1a", 
                "AzB": "ap-northeast-1b", 
                "AzC": "ap-northeast-1c"
            }
        }
    }, 
    "Parameters": {
        "ImageId": {
            "Default"    : "ami-xxxxxxxx",
            "Description": "Image ID", 
            "Type"       : "String"
        }, 
	"InstanceType": {
            "Default"    : "t1.micro", 
            "Description": "Instance Type", 
            "Type"       : "String"
        }, 
        "KeyName": {
            "Default"    : "aws_ap-northeast-1", 
            "Description": "Key Name", 
            "Type"       : "String"
        }, 
        "Name": {
            "Default"    : "od-step", 
            "Description": "Name", 
            "Type"       : "String"
        }, 
        "SourceCidrIp": {
            "Default"    : "0.0.0.0/0",
            "Description": "Source CIDR IP",
            "Type"       : "String"
        },
        "TargetSecurityGroup": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "TargetSecurityGroup",
            "Type"       : "String"
        },
        "SubnetId": {
            "Default"    : "subnet-xxxxxxxx", 
            "Description": "Subnet ID", 
            "Type"       : "String"
        },
	"IamInstanceProfile": {
            "Default"    : "", 
            "Description": "IAM Instance Profile", 
            "Type"       : "String"
        }
    }, 
    "Resources": {
        "OpStep": {
            "Type"      : "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "op-step",
                "VpcId"           : { "Ref": "VpcId" }
            }
        },
        "EC2SecurityGroupIngressOpStepSshSource": {
            "Type"      : "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "OpStep" },
                "IpProtocol"                : "6",
                "FromPort"                  : "22",
                "ToPort"                    : "22",
                "CidrIp"                    : { "Ref": "SourceCidrIp" }
            }
        },
        "EC2SecurityGroupEgressOpStepSshOpEc2": {
            "Type"      : "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "OpStep" },
                "IpProtocol"                : "6",
                "FromPort"                  : "22",
                "ToPort"                    : "22",
                "DestinationSecurityGroupId": { "Ref": "TargetSecurityGroup" }
            }
        },
        "EC2SecurityGroupEgressOpStepNtpInternet": {
            "Type"      : "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "OpStep" },
                "IpProtocol"                : "17",
                "FromPort"                  : "123",
                "ToPort"                    : "123",
                "CidrIp"                    : "0.0.0.0/0"
            }
        },
        "EC2SecurityGroupIngressTargetSshOpStep": {
            "Type"      : "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "TargetSecurityGroup" },
                "IpProtocol"                : "6",
                "FromPort"                  : "22",
                "ToPort"                    : "22",
                "SourceSecurityGroupId"     : { "Ref": "OpStep" }
            }   
        },  
        "EC2InstanceStep": {
            "Type"      : "AWS::EC2::Instance",
            "Properties": {
                "ImageId"           : { "Ref": "ImageId" }, 			
                "InstanceType"      : { "Ref": "InstanceType" }, 
                "KeyName"           : { "Ref": "KeyName" }, 
                "SecurityGroupIds"  : [ { "Ref": "OpStep" } ], 
                "SourceDestCheck"   : "true", 
                "SubnetId"          : { "Ref": "SubnetId" }, 
		"IamInstanceProfile": { "Ref": "IamInstanceProfile" },
                "Tags"              : [
                    { "Key": "Name", "Value": {"Ref": "Name" } } 
                ]
            } 
        }, 
        "EC2EIPStep": {
            "Type"      : "AWS::EC2::EIP",
            "Properties": {
                "Domain"    : "vpc", 
                "InstanceId": { "Ref": "EC2InstanceStep" }
            } 
        }
    },
    "Outputs": {
        "GithubMarkdown": {
            "Description": "Github Markdown",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/suz-lab_step.md"
        }, 
        "GithubJson": {
            "Description": "Github JSON",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/suz-lab_step.json"
        }, 
        "S3JsonApNortheast1": {
            "Description": "S3 JSON ap-northeast-1",
            "Value"      : "http://ap-northeast-1.template.suz-lab.com.s3.amazonaws.com/template/suz-lab_step/0.0.2.json"
        }, 
	"CacooImage": {
            "Description": "Cacoo Image",
            "Value"      : "https://cacoo.com/diagrams/XXXXXXXXXXXXXXXX-XXXXX.png"
        }
    }
}
