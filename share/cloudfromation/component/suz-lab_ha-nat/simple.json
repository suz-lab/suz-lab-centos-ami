{
    "AWSTemplateFormatVersion": "2010-09-09", 
    "Description": "SUZ-LAB Formation HighAvailability NAT", 
    "Mappings": {
        "AvailabilityZoneMap": {
            "ap-northeast-1": {
                "AzA": "ap-northeast-1a", 
                "AzB": "ap-northeast-1b", 
                "AzC": "ap-northeast-1c"
            }
        }
    }, 
    "Parameters": {
        "VpcId": {
            "Default"    : "vpc-xxxxxxxx",
            "Description": "VPC ID", 
            "Type"       : "String"
        }, 
        "ImageId": {
            "Default"    : "ami-xxxxxxxx",
            "Description": "Image ID", 
            "Type"       : "String"
        }, 
	"InstanceType": {
            "Default"    : "t1.micro", 
            "Description": "Instance Type", 
            "Type"       : "String"
        }, 
        "KeyName": {
            "Default"    : "aws_ap-northeast-1", 
            "Description": "Key Name", 
            "Type"       : "String"
        }, 
        "Name": {
            "Default"    : "ha-nat", 
            "Description": "Name", 
            "Type"       : "String"
        }, 
        "RouteTableId": {
	    "Default"    : "rtb-xxxxxxxx", 
            "Description": "Route Table ID", 
            "Type"       : "String"
        }, 
        "SecurityGroupIdOpEc2": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Target Security Group ID EC2",
            "Type"       : "String"
        },
        "SecurityGroupIdOdMaintenance": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Target Security Group ID Maintenance",
            "Type"       : "String"
        },
        "SecurityGroupIdOpNat": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Target Security Group ID NAT",
            "Type"       : "String"
        },
	"IamInstanceProfile": {
            "Default"    : "", 
            "Description": "IAM Instance Profile", 
            "Type"       : "String"
        },
        "SubnetIdA": {
            "Default"    : "subnet-xxxxxxxx",
            "Description": "Subnet ID Zone A",
            "Type"       : "String"
        },
        "SubnetIdB": {
            "Default"    : "subnet-xxxxxxxx",
            "Description": "Subnet ID Zone B",
            "Type"       : "String"
        },
        "PrivateIpAddressA": {
            "Default"    : "xxx.xxx.xxx.xxx",
            "Description": "Private IP Address Zone A",
            "Type"       : "String"
        },
        "PrivateIpAddressB": {
            "Default"    : "yyy.yyy.yyy.yyy",
            "Description": "Private IP Address Zone B",
            "Type"       : "String"
        }
    }, 
    "Resources": {
        "Ec2SecurityGroupIngressOpNatNtpOpEc2": {
            "Type": "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpNat" },
                "IpProtocol"                : "17",
                "FromPort"                  : "123",
                "ToPort"                    : "123",
                "SourceSecurityGroupId"     : { "Ref": "SecurityGroupIdOpEc2" }
            }
        },
        "Ec2SecurityGroupIngressOpNatSmtpOpEc2": {
            "Type": "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpNat" },
                "IpProtocol"                : "6",
                "FromPort"                  : "25",
                "ToPort"                    : "25",
                "SourceSecurityGroupId"     : { "Ref": "SecurityGroupIdOpEc2" }
            }
        },
        "Ec2SecurityGroupEgressOpNatNtpInternet": {
            "Type": "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpNat" },
                "IpProtocol"                : "17",
                "FromPort"                  : "123",
                "ToPort"                    : "123",
                "CidrIp"                    : "0.0.0.0/0"
            }
        },
        "Ec2SecurityGroupEgressOpNatSmtpInternet": {
            "Type": "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpNat" },
                "IpProtocol"                : "6",
                "FromPort"                  : "25",
                "ToPort"                    : "25",
                "CidrIp"                    : "0.0.0.0/0"
            }
        },
        "Ec2SecurityGroupEgressOpEc2NtpOpNat": {
            "Type": "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpEc2" },
                "IpProtocol"                : "17",
                "FromPort"                  : "123",
                "ToPort"                    : "123",
                "DestinationSecurityGroupId": { "Ref": "SecurityGroupIdOpNat" }
            }
        },
        "Ec2SecurityGroupEgressOpEc2SmtpOpNat": {
            "Type": "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpEc2" },
                "IpProtocol"                : "6",
                "FromPort"                  : "25",
                "ToPort"                    : "25",
                "DestinationSecurityGroupId": { "Ref": "SecurityGroupIdOpNat" }
            }
        },
        "Ec2InstanceNatA": {
            "Type"      : "AWS::EC2::Instance",
            "Properties": {
                "SourceDestCheck"   : "false", 
                "ImageId"           : { "Ref": "ImageId" },     
                "InstanceType"      : { "Ref": "InstanceType" },
                "KeyName"           : { "Ref": "KeyName" },
                "SecurityGroupIds"  : [ { "Ref": "SecurityGroupIdOpNat" }, { "Ref": "SecurityGroupIdOdMaintenance" } ], 
                "IamInstanceProfile": { "Ref": "IamInstanceProfile" },
                "SubnetId"          : { "Ref": "SubnetIdA" },
                "PrivateIpAddress"  : { "Ref": "PrivateIpAddressA" },
                "Tags"              : [ 
                    { "Key": "Name"        , "Value": { "Fn::Join": [ "_", [ { "Ref": "Name" }, "a" ] ] } },
                    { "Key": "suz:ha-group", "Value": { "Ref": "Name" } }
                ],   
                "UserData"          : { "Fn::Base64": { "Fn::Join": [ "\n", [
                    "#include-once",
                    "https://raw.github.com/suz-lab/suz-lab-centos-ami/master/share/cloud-init/suz-lab_nat",
                    "https://raw.github.com/suz-lab/suz-lab-centos-ami/master/share/cloud-init/suz-lab_ha"
                ] ] } }
            }   
        },
        "Ec2InstanceNatB": {
            "Type"      : "AWS::EC2::Instance",
            "Properties": {
                "SourceDestCheck"   : "false", 
                "ImageId"           : { "Ref": "ImageId" },     
                "InstanceType"      : { "Ref": "InstanceType" },
                "KeyName"           : { "Ref": "KeyName" },
                "SecurityGroupIds"  : [ { "Ref": "SecurityGroupIdOpNat" }, { "Ref": "SecurityGroupIdOdMaintenance" } ], 
                "IamInstanceProfile": { "Ref": "IamInstanceProfile" },
                "SubnetId"          : { "Ref": "SubnetIdB" },
                "PrivateIpAddress"  : { "Ref": "PrivateIpAddressB" },
                "Tags"              : [ 
                    { "Key": "Name"        , "Value": { "Fn::Join": [ "_", [ { "Ref": "Name" }, "b" ] ] } },
                    { "Key": "suz:ha-group", "Value": { "Ref": "Name" } }
                ],   
                "UserData"          : { "Fn::Base64": { "Fn::Join": [ "\n", [
                    "#include-once",
                    "https://raw.github.com/suz-lab/suz-lab-centos-ami/master/share/cloud-init/suz-lab_nat",
                    "https://raw.github.com/suz-lab/suz-lab-centos-ami/master/share/cloud-init/suz-lab_ha"
                ] ] } }
            }   
        },
        "Ec2EIPNatA": {
            "Type"      : "AWS::EC2::EIP",
            "Properties": {
                "Domain"    : "vpc",
                "InstanceId": { "Ref": "Ec2InstanceNatA" }
            }  
        },    
        "Ec2EIPNatB": {
            "Type"      : "AWS::EC2::EIP",
            "Properties": {
                "Domain"    : "vpc",
                "InstanceId": { "Ref": "Ec2InstanceNatB" }
            }  
        },  
 	"Ec2RouteNat": {
            "Type"      : "AWS::EC2::Route",
            "Properties": {
                "DestinationCidrBlock": "0.0.0.0/0", 
                "InstanceId"          : { "Ref": "Ec2InstanceNatA" },
                "RouteTableId"        : { "Ref": "RouteTableId" }
            } 
        },
        "Ec2DhcpOptions" : {
            "Type"      : "AWS::EC2::DHCPOptions",
            "Properties": {
                "DomainNameServers" : [ "AmazonProvidedDNS" ],
                "NtpServers"        : [ { "Ref": "PrivateIpAddressA" }, { "Ref": "PrivateIpAddressB" } ]
            }
        },
        "Ec2VpcDhcpOptionsAssociation" : {
            "Type"      : "AWS::EC2::VPCDHCPOptionsAssociation",
            "Properties": {
                "DhcpOptionsId": { "Ref": "Ec2DhcpOptions" },
                "VpcId"        : { "Ref": "VpcId" }
            }
        }
    },
    "Outputs": {
        "GithubMarkdown": {
            "Description": "Github Markdown",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/suz-lab_ondemand-nat.md"
        }, 
        "GithubJson": {
            "Description": "Github JSON",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/suz-lab_ondemand-nat.json"
        }, 
        "S3JsonApNortheast1": {
            "Description": "S3 JSON ap-northeast-1",
            "Value"      : "http://ap-northeast-1.template.suz-lab.com.s3.amazonaws.com/template/suz-lab_ondemand-nat/0.0.3.json"
        }, 
	"CacooImage": {
            "Description": "Cacoo Image",
            "Value"      : "https://cacoo.com/diagrams/XXXXXXXXXXXXXXXX-XXXXX.png"
        }
    }
}
