{
    "AWSTemplateFormatVersion": "2010-09-09", 
    "Description": "SUZ-LAB Formation OnDemand Step Simple", 
    "Mappings": {
        "AvailabilityZoneMap": {
            "ap-northeast-1": {
                "AzA": "ap-northeast-1a", 
                "AzB": "ap-northeast-1b", 
                "AzC": "ap-northeast-1c"
            }
        }
    }, 
    "Parameters": {
        "VpcId": {
            "Default"    : "vpc-xxxxxxxx",
            "Description": "VPC ID",
            "Type"       : "String"
        },
        "ImageId": {
            "Default"    : "ami-xxxxxxxx",
            "Description": "Image ID", 
            "Type"       : "String"
        }, 
	"InstanceType": {
            "Default"    : "t1.micro", 
            "Description": "Instance Type", 
            "Type"       : "String"
        }, 
        "KeyName": {
            "Default"    : "aws_ap-northeast-1", 
            "Description": "Key Name", 
            "Type"       : "String"
        }, 
        "Name": {
            "Default"    : "op-admin", 
            "Description": "Name", 
            "Type"       : "String"
        }, 
        "SecurityGroupIdOpEc2": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Security Group ID EC2",
            "Type"       : "String"
        },
        "SecurityGroupIdOpNat": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Security Group ID NAT",
            "Type"       : "String"
        },
        "SecurityGroupIdOpStep": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Security Group ID Step",
            "Type"       : "String"
        },
        "SecurityGroupIdOdMaintenance": {
            "Default"    : "sg-xxxxxxxx",
            "Description": "Security Group ID Maintenance",
            "Type"       : "String"
        },
        "SubnetId": {
            "Default"    : "subnet-xxxxxxxx", 
            "Description": "Subnet ID", 
            "Type"       : "String"
        },
        "PrivateIpAddress": {
            "Default"    : "xxx.xxx.xxx.xxx",
            "Description": "Private IP Address",
            "Type"       : "String"
        },
	"IamInstanceProfile": {
            "Default"    : "", 
            "Description": "IAM Instance Profile", 
            "Type"       : "String"
        }
    }, 
    "Resources": {
        "OpAdmin": {
            "Type"      : "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "op-admin",
                "VpcId"           : { "Ref": "VpcId" }
            }
        },
        "Ec2SecurityGroupIngressOpAdminLdapOpEc2": {
            "Type"      : "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "OpAdmin" },
                "IpProtocol"                : "6",
                "FromPort"                  : "389",
                "ToPort"                    : "389",
                "SourceSecurityGroupId"     : { "Ref": "SecurityGroupIdOpEc2" }
            }
        },
        "Ec2SecurityGroupIngressOpAdminLdapOpStep": {
            "Type"      : "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "OpAdmin" },
                "IpProtocol"                : "6",
                "FromPort"                  : "389",
                "ToPort"                    : "389",
                "SourceSecurityGroupId"     : { "Ref": "SecurityGroupIdOpStep" }
            }
        },
        "Ec2SecurityGroupIngressOpAdminLdapOpNat": {
            "Type"      : "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId"                   : { "Ref": "OpAdmin" },
                "IpProtocol"                : "6",
                "FromPort"                  : "389",
                "ToPort"                    : "389",
                "SourceSecurityGroupId"     : { "Ref": "SecurityGroupIdOpNat" }
            }
        },
        "Ec2SecurityGroupEgressOpEc2LdapOpAdmin": {
            "Type"      : "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpEc2" },
                "IpProtocol"                : "6",
                "FromPort"                  : "389",
                "ToPort"                    : "389",
                "DestinationSecurityGroupId": { "Ref": "OpAdmin" }
            }
        },
        "Ec2SecurityGroupEgressOpStepLdapOpAdmin": {
            "Type"      : "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpStep" },
                "IpProtocol"                : "6",
                "FromPort"                  : "389",
                "ToPort"                    : "389",
                "DestinationSecurityGroupId": { "Ref": "OpAdmin" }
            }
        },
        "Ec2SecurityGroupEgressOpNatLdapOpAdmin": {
            "Type"      : "AWS::EC2::SecurityGroupEgress",
            "Properties": {
                "GroupId"                   : { "Ref": "SecurityGroupIdOpNat" },
                "IpProtocol"                : "6",
                "FromPort"                  : "389",
                "ToPort"                    : "389",
                "DestinationSecurityGroupId": { "Ref": "OpAdmin" }
            }
        },
        "Ec2InstanceOpAdmin": {
            "Type"      : "AWS::EC2::Instance",
            "Properties": {
                "SourceDestCheck"   : "true", 
                "ImageId"           : { "Ref": "ImageId" },     
                "InstanceType"      : { "Ref": "InstanceType" },
                "KeyName"           : { "Ref": "KeyName" },
                "SecurityGroupIds"  : [ { "Ref": "OpAdmin" }, { "Ref": "SecurityGroupIdOdMaintenance" } ], 
                "IamInstanceProfile": { "Ref": "IamInstanceProfile" },
                "SubnetId"          : { "Ref": "SubnetId" },
                "PrivateIpAddress"  : { "Ref": "PrivateIpAddress" },
                "Tags"              : [ { "Key": "Name", "Value": { "Ref": "Name" } } ],   
                "UserData"          : { "Fn::Base64": { "Fn::Join": [ "\n", [
                    "#include-once",
                    "https://raw.github.com/suz-lab/suz-lab-centos-ami/master/share/cloud-init/pattern/suz-lab_op-admin"
                ] ] } }
            }   
        }
    },
    "Outputs": {
        "GithubMarkdown": {
            "Description": "Github Markdown",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/suz-lab_step.md"
        }, 
        "GithubJson": {
            "Description": "Github JSON",
            "Value"      : "https://github.com/suz-lab/suz-lab-centos-ami/blob/master/share/cloudfromation/suz-lab_step.json"
        }, 
        "S3JsonApNortheast1": {
            "Description": "S3 JSON ap-northeast-1",
            "Value"      : "http://ap-northeast-1.template.suz-lab.com.s3.amazonaws.com/template/suz-lab_step/0.0.2.json"
        }, 
	"CacooImage": {
            "Description": "Cacoo Image",
            "Value"      : "https://cacoo.com/diagrams/XXXXXXXXXXXXXXXX-XXXXX.png"
        },
	"SecurityGroupIdOpStep": {
            "Description": "Security Group ID Step",
            "Value"      : { "Ref": "OpStep" }
        },
	"PublicIpAddressStep": {
            "Description": "Public IP Address Step",
            "Value"      : { "Ref": "Ec2EipStep" }
        }
    }
} 
